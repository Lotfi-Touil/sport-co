{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}
    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold mb-5">Entreprise #{{ company.id }}</h1>

            <div class="actions flex">
                {% if can_access('platform_company_index') %}
                    <a href="{{ path('platform_company_index') }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                        Revenir à la liste
                    </a>
                {% endif %}
                {% if can_access('platform_company_edit') %}
                    <a href="{{ path('platform_company_edit', {'id': company.id}) }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                        Modifier
                    </a>
                {% endif %}
                {% if can_access('platform_company_delete') %}
                    {{ include('back/company/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>

        <div class="p-6">
            <table class="w-full table-auto">
                <tbody class="text-gray-700">
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Id</th>
                        <td class="py-2 px-4">{{ company.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Nom</th>
                        <td class="py-2 px-4">{{ company.name }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Email</th>
                        <td class="py-2 px-4">{{ company.email }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">N° Siret</th>
                        <td class="py-2 px-4">{{ company.siret }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Téléphone</th>
                        <td class="py-2 px-4">{{ company.phone }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Adresse</th>
                        <td class="py-2 px-4">{{ company.address }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Site web</th>
                        <td class="py-2 px-4">{{ company.website }}</td>
                    </tr>
                    <tr>
                        <th class="py-2 px-4 text-left font-semibold">Description</th>
                        <td class="py-2 px-4">{{ company.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}