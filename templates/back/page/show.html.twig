{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}
    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold mb-5">Page #{{ page.id }}</h1>

            <div class="actions flex">
                <a href="{{ path('platform_page_index') }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Revenir Ã  la liste
                </a>
                <a href="{{ path('platform_page_edit', {'id': page.id}) }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Modifier
                </a>
                {{ include('back/page/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="p-6">
            <table class="w-full table-auto">
                <tbody class="text-gray-700">
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Id</th>
                        <td class="py-2 px-4">{{ page.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Nom de la page</th>
                        <td class="py-2 px-4">{{ page.name }}</td>
                    </tr>
                    <tr>
                        <th class="py-2 px-4 text-left font-semibold">Path</th>
                        <td class="py-2 px-4">{{ page.path }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}