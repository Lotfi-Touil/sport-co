{# templates/back/dashboard/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}
    <div class="pt-20 w-full flex flex-col items-center">
        <h1 class="text-4xl font-bold text-gray-800">Dashboard</h1>

        <div class="mt-12 w-full px-4">
            <div class="flex flex-wrap justify-center gap-4">
                {% if isUserAdmin %}
                    <div class="flex flex-col items-center w-full sm:w-1/2 md:w-1/3">
                        <h2 class="text-2xl font-semibold text-gray-700">Nombre de commandes</h2>
                        <div class="mt-4 h-64 w-full bg-white shadow-md rounded-lg p-4 flex items-center justify-center">
                            {{ render_chart(paymentChart) }}
                        </div>
                    </div>
                {% endif %}

                <div class="flex flex-col items-center w-full sm:w-1/2 md:w-1/3">
                    <h2 class="text-2xl font-semibold text-gray-700">Nombre d'inscriptions</h2>
                    <div class="mt-4 h-64 w-full bg-white shadow-md rounded-lg p-4 flex items-center justify-center">
                        {{ render_chart(signupChart) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
