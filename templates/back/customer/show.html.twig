{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}
    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold mb-5">Client #{{ customer.id }}</h1>

            <div class="actions flex">
                <a href="{{ path('platform_customer_index') }}" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">
                    Revenir à la liste
                </a>
                <a href="{{ path('platform_customer_edit', {'id': customer.id}) }}" class="inline-block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mr-2">
                    Modifier
                </a>
                {{ include('back/customer/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
            <table class="w-full table-auto">
                <tbody class="text-gray-700">
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Id</th>
                        <td class="py-2 px-4">{{ customer.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Prénom</th>
                        <td class="py-2 px-4">{{ customer.firstName }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Nom</th>
                        <td class="py-2 px-4">{{ customer.lastName }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Email</th>
                        <td class="py-2 px-4">{{ customer.email }}</td>
                    </tr>
                    <tr>
                        <th class="py-2 px-4 text-left font-semibold">Téléphone</th>
                        <td class="py-2 px-4">{{ customer.phone }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}