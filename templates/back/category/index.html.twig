{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}

    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-lg font-bold">Liste des categories</h1>
            <a href="{{ path('platform_category_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Cr√©er une categories
            </a>
        </div>
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left">
                        #
                    </th>
                    <th scope="col" class="px-6 py-3 text-left">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3 text-left">
                        Description
                    </th>

                    <th scope="col" class="px-6 py-3 text-left">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <td class="px-6 py-4">{{ category.id }}</td>
                        <td class="px-6 py-4">{{ category.name }}</td>
                        <td class="px-6 py-4">{{ category.descirption }}</td>

                        <td class="px-6 py-4 flex">
                            <a href="{{ path('platform_category_show', {'id': category.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mr-2">
                                Voir
                            </a>
                            <a href="{{ path('platform_category_edit',{'id': category.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline mr-2">
                                Modifier
                            </a>
                            {{ include('back/category/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr class="bg-gray-100 border-b dark:bg-gray-800">
                        <td colspan="6" class="px-6 py-4 text-center text-gray-600 dark:text-gray-400 text-lg">
                            Aucun produit pour le moment.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </section>

{% endblock %}
