{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    {% include '_partials/back/_platform_nav.html.twig' %}
    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold mb-5">Entreprise #{{ user.id }}</h1>

            <div class="actions flex">
                <a href="{{ path('platform_user_index') }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Revenir à la liste
                </a>
                <a href="{{ path('platform_user_edit', {'id': user.id}) }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Modifier
                </a>
                {{ include('back/user/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="p-6">
            <table class="w-1/2 table-auto">
                <tbody class="text-gray-700">
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Id</th>
                        <td class="py-2 px-4">{{ user.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Prénom</th>
                        <td class="py-2 px-4">{{ user.firstName }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Nom</th>
                        <td class="py-2 px-4">{{ user.lastName }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Entreprise</th>
                        <td class="py-2 px-4">{{ user.company.name ?? '-' }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Email</th>
                        <td class="py-2 px-4">{{ user.email }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Téléphone</th>
                        <td class="py-2 px-4">{{ user.phone }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Adresse</th>
                        <td class="py-2 px-4">{{ user.address }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-semibold">Rôles</th>
                        <td class="py-2 px-4">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th class="py-2 px-4 text-left font-semibold">Créé le</th>
                        <td class="py-2 px-4">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '-' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}