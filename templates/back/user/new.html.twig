{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
   {% include '_partials/back/_platform_nav.html.twig' %}

    <section class="p-4 mt-14 w-full">
        <div class="flex justify-between items-center mb-4">
            {% if is_granted("ROLE_ADMIN") %}
                <h1 class="text-2xl font-bold mb-5">Nouvel utilisateur</h1>
            {% else %}
                <h1 class="text-2xl font-bold mb-5">Nouveau compte</h1>
            {% endif %}
            <div class="actions flex">
                <a href="{{ path('platform_user_index') }}" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                    Revenir à la liste
                </a>
            </div>
        </div>

        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'w-full'}}) }}

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Prénom</label>
                {{ form_widget(form.firstName, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Nom</label>
                {{ form_widget(form.lastName, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.lastName) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Téléphone</label>
                {{ form_widget(form.phone, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.phone) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Adresse</label>
                {{ form_widget(form.address, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.address) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Mot de passe</label>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2">Confirmer mot de passe</label>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="mb-4">
                    <label for="user_role" class="block text-gray-700 text-sm font-bold mb-2">Rôle</label>
                    <select id="user_role" name="user_role" class="border-gray-300 shadow appearance-none border rounded w-1/2 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        <option value="ROLE_USER">Utilisateur</option>
                        <option value="ROLE_EMPLOYE">Employé</option>
                        <option value="ROLE_COMPANY">Entreprise</option>
                        <option value="ROLE_ADMIN">Admin</option>
                    </select>
                </div>
            {% endif %}

            <button type="submit" class="text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                Enregistrer
            </button>

            {{ form_widget(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </section>
{% endblock %}