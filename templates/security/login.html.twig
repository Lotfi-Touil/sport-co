{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <main class="w-full flex">
        <div class="relative flex-1 hidden items-center justify-center h-screen bg-gray-900 lg:flex">
            <div class="relative z-10 w-full max-w-md">
                <div class="mt-16 space-y-3">
                    <h3 class="text-white text-3xl font-bold">
                        Content de vous revoir !
                    </h3>
                    <p class="text-gray-300">
                        Connectez-vous pour reprendre là où vous vous êtes arrêté et continuer
                        à exploiter tout le potentiel de sportCo.
                    </p>
                </div>
            </div>
            <div class="absolute inset-0 my-auto h-[500px]" style="
        background: linear-gradient(
          152.92deg,
          rgba(192, 132, 252, 0.2) 4.54%,
          rgba(232, 121, 249, 0.26) 34.2%,
          rgba(192, 132, 252, 0.1) 77.55%
        );
        filter: blur(118px);
      "></div>
        </div>
        <div class="flex-1 flex items-center justify-center h-screen">
            <div class="w-full max-w-md space-y-8 px-4 bg-white text-gray-600 sm:px-0">

                <div class="">
                    <div class="mt-5 space-y-2">
                        <h3 class="text-gray-800 text-2xl font-bold sm:text-3xl">
                            Connexion
                        </h3>
                        <p class="">
                            Pas encore membre ?
                            <a
                                    href="{{ path("app_register") }}"
                                    class="font-medium text-indigo-600 hover:text-indigo-500"
                            >S'enregistrer</a
                            >
                        </p>
                    </div>
                </div>
                <form  method="post" class="space-y-5">
                    {% if error %}
                        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div>
                        <label for="inputEmail" class="font-medium">Email</label>
                        <input

                                type="email"
                                value="{{ last_username }}"
                                name="email"
                                id="inputEmail"
                                required
                                autofocus
                                autocomplete="email"
                                class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg"
                        />
                    </div>

                    <div>
                        <label for="inputPassword" class="font-medium">Mot de passe</label>
                        <input
                                name="password"
                                id="inputPassword"
                                type="password"
                                required
                                autocomplete="current-password"
                                class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-indigo-600 shadow-sm rounded-lg"
                        />
                    </div>



                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="w-full px-4 py-2 text-white font-medium bg-indigo-600 hover:bg-indigo-500 active:bg-indigo-600 rounded-lg duration-150">
                        Connexion
                    </button>
                    <div class="mt-14">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <a class="font-medium text-indigo-600 hover:text-indigo-500" href="{{ path("app_forgot_password_request") }}">Mot de passe oublié ?</a>
                    </div>

                </form>
            </div>
        </div>
    </main>
{% endblock %}
